    //--Press----
    if input_action_pressed == true
      input_action         = true;
       
    if input_left_pressed == true
      input_left         = true;
    
    if input_right_pressed == true
      input_right         = true;
                
    if input_up_pressed == true
      input_up         = true;    
    
    if input_down_pressed == true
      input_down         = true;
    //----------- 
      
    //--Release----       
    if input_action_released == true
      input_action        = false;      
           
    if input_left_released == true
      input_left         = false;
    
    if input_right_released == true
      input_right         = false;
                    
    if input_up_released == true
      input_up         = false;
        
    if input_down_released == true
      input_down         = false;
