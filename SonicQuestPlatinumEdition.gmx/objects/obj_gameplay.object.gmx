{
    position = lerp(position, 0, 0.1);
    if(position &gt; -4)
    {
        usable = 1;
    }
}
if(usable)
{
    if(transparency != 1)
    {
        transparency += .02;
    } 
    //Scroll Up:
    if(keyboard_check_pressed(global.ip_up)){
    // || (joy_hat_y(0) = -1 &amp;&amp; GMP.dpad_up == 0)){
       if(options_id != 1){
          options_id -= 1;
       }else{
          options_id = options_available;
      };
      audio_play(_general_menu_bleep, global.sfx_volume);  
    };
    
    //Scroll Down:
    if(keyboard_check_pressed(global.ip_down)){
    // || (joy_hat_y(0) = 1 &amp;&amp; GMP.dpad_down == 0)){
       if(options_id != options_available){
          options_id += 1;
       }else{
          options_id = 1;
      };
      audio_play(_general_menu_bleep, global.sfx_volume);  
    };
    
    /// Change Options:
    switch(options_id)
    {
        // --- Dropdash Option:
        case 1:
        {
           if(keyboard_check_pressed(global.ip_left)) // || (joy_hat_x(0) = -1 &amp;&amp; GMP.dpad_left == 0) &amp;&amp; global.display_size &gt; 1)
           {
                if(global.setting_gameplay_dropdash == true)
                {
                    global.setting_gameplay_dropdash = false;
                }
                audio_play(_general_menu_bleep, global.sfx_volume);  
           }
           if(keyboard_check_pressed(global.ip_right)) // || (joy_hat_x(0) = 1 &amp;&amp; GMP.dpad_right == 0) &amp;&amp; global.display_size &lt; 3)
           {     
                if(global.setting_gameplay_dropdash == false)
                {
                    global.setting_gameplay_dropdash = true;
                }
                audio_play(_general_menu_bleep, global.sfx_volume);
           }
           break;
        }
        // --- Peelout Option:
        case 2:
        {
           if(keyboard_check_pressed(global.ip_left)) // || (joy_hat_x(0) = -1 &amp;&amp; GMP.dpad_left == 0) &amp;&amp; global.display_size &gt; 1)
           {
                if(global.setting_gameplay_peelout == true)
                {
                    global.setting_gameplay_peelout = false;
                }
                audio_play(_general_menu_bleep, global.sfx_volume);  
           }
           if(keyboard_check_pressed(global.ip_right)) // || (joy_hat_x(0) = 1 &amp;&amp; GMP.dpad_right == 0) &amp;&amp; global.display_size &lt; 3)
           {     
                if(global.setting_gameplay_peelout == false)
                {
                    global.setting_gameplay_peelout = true;
                }
                audio_play(_general_menu_bleep, global.sfx_volume);
           }
            break;
        }
        // --- Insta-Shield Option:
        case 3:
        {
           if(keyboard_check_pressed(global.ip_left)) // || (joy_hat_x(0) = -1 &amp;&amp; GMP.dpad_left == 0) &amp;&amp; global.display_size &gt; 1)
           {
                if(global.setting_gameplay_instashield == true)
                {
                    global.setting_gameplay_instashield = false;
                }
                audio_play(_general_menu_bleep, global.sfx_volume);  
           }
           if(keyboard_check_pressed(global.ip_right)) // || (joy_hat_x(0) = 1 &amp;&amp; GMP.dpad_right == 0) &amp;&amp; global.display_size &lt; 3)
           {     
                if(global.setting_gameplay_instashield == false)
                {
                    global.setting_gameplay_instashield = true;
                }
                audio_play(_general_menu_bleep, global.sfx_volume);
           }
            break;
        }
        // --- Exit:
        case 4:
        {
            if(keyboard_check_pressed(global.ip_button_s))// || joy_pressed(0, global.gamepad_start))
            {
                config_save_gameplay();
                if(alarm[0] = -1)
                {
                    alarm[0] = 1;
                }
                audio_play(_general_menu_accept, global.sfx_volume);  
            }
            break;
        }
    }
}
                

